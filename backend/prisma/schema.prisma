datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            Int     @id @default(autoincrement())
  email         String  
  name          String
  password      String
  surname       String
  documentId    String
  birthday      DateTime
  phoneNumber   String
  address       String
  city          String
  postalCode    String
  iban          String
  occupationTarget  String?
  employeePosition  String?

   @@unique([email,documentId])
}
